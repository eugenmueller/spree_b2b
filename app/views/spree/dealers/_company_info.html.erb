<div class="panel panel-default" id="company-info" data-hook>
  <div class="panel-heading">
    <h3 class="panel-title"><%= Spree.t(:company_information) %></h3>
  </div>
  <div class="panel-body">
    <div class="form-group" id="company">
      <%= form.label :company do %>
        <%= Spree.t(:company) %><abbr class="required" title="required">*</abbr>
      <% end %>
      <%= form.text_field :company, :class => 'form-control required' %>
    </div>

    <div class="form-group" id="buyer_contact">
      <%= form.label :buyer_contact do %>
        <%= Spree.t(:buyer_contact) %><abbr class="required" title="required">*</abbr>
      <% end %>
      <%= form.text_field :buyer_contact, :class => 'form-control required' %>
    </div>

    <div class="form-group" id="buyer_contact">
      <%= form.label :manager_contact do %>
        <%= Spree.t(:manager_contact) %><abbr class="required" title="required">*</abbr>
      <% end %>
      <%= form.text_field :manager_contact, :class => 'form-control required' %>
    </div>

    <div class="form-group" id="phone">
      <%= form.label :phone do %>
        <%= Spree.t(:phone) %><abbr class="required" title="required">*</abbr>
      <% end %>
      <%= form.text_field :phone, :class => 'form-control required' %>
    </div>
    <div class="form-group" id="fax">
      <%= form.label :fax do %>
        <%= Spree.t(:fax) %><abbr class="required" title="required">*</abbr>
      <% end %>
      <%= form.text_field :fax, :class => 'form-control required' %>
    </div>
    <div class="form-group" id="resale_number">
      <%= form.label :resale_number do %>
        <%= Spree.t(:resale_number) %><abbr class="required" title="required">*</abbr>
      <% end %>
      <%= form.text_field :resale_number, :class => 'form-control required' %>
    </div>
    <div class="form-group" id="taxid">
      <%= form.label :taxid do %>
        <%= Spree.t(:taxid) %><abbr class="required" title="required">*</abbr>
      <% end %>
      <%= form.text_field :taxid, :class => 'form-control required' %>
    </div>



    <div class="form-group" id="web_address">
      <%= form.label :web_address do %>
        <%= Spree.t(:website) %><abbr class="required" title="required">*</abbr>
      <% end %>
      <%= form.text_field :web_address, :class => 'form-control required' %>
    </div>

    <div class="form-group" id="terms">
      <%= form.label :terms, Spree.t(:terms) %><br />
      <%= form.text_field :terms, :class => 'form-control' %>
    </div>

    <div class="form-group" id="notes">
      <%= form.label :notes, Spree.t(:notes) %><br />
      <%= form.text_area :notes, :class => 'form-control', rows: 4, placeholder: "Please enter any questions or comments here" %>
    </div>
  </div>
</div>
